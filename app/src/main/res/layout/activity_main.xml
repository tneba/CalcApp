<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <!--表示部-->

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:textSize="48sp"
        />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/key_Copy"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="Copy"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_C"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="C"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_AC"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="AC"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_BS"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="BS"
                android:textSize="20sp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/key_7"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="7"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_8"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="8"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_9"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="9"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_dev"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="/"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/key_4"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="4"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_5"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="5"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_6"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="6"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_multi"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="*"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/key_1"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="1"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_2"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="2"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_3"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="3"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_sub"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="-"
                android:textSize="20sp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/key_0"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="0"
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_ten"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="."
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_eq"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="="
                android:textSize="20sp" />

            <Button
                android:id="@+id/key_add"
                android:layout_width="80sp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:onClick="operateKey"
                android:text="+"
                android:textSize="20sp" />
        </TableRow>
    </TableLayout>

</LinearLayout>